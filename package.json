{
  "name": "taskmaster-pro-fresh",
  "version": "1.0.0",
  "description": "Enterprise Task Management MultiSaaS Platform - Fresh Start",
  "private": true,
  "workspaces": [
    "infrastructure",
    "backend", 
    "frontend"
  ],
  "scripts": {
    "bootstrap": "cd infrastructure && cdk bootstrap",
    "deploy:infra": "cd infrastructure && cdk deploy --all",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "dev:frontend": "cd frontend && npm run dev",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test"
  },
  "devDependencies": {
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
